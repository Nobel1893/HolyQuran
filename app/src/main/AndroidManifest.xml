<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="route.com.holyquran">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SurasList"
            android:label="@string/title_activity_suras_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowSura"
            android:label="@string/title_activity_show_sura"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AhadeethList" />
        <activity
            android:name=".ShowReciters"
            android:label="@string/title_activity_show_reciters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="route.com.ReciterSuras"
            android:label="@string/title_activity_reciter_suras"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>